<%= form_for ([@tutor, @tutor.reviews.build]) do |f| %>
  <span style="display: inline-flex;">
    <label style="padding-right: 10px;">Vurdering:</label>
    <div id="rating-form"></div>
    <%= f.submit 'Legg til anmeldelse', class: 'btn btn-primary' %>
  </span><br><br>
  <%= f.text_area :comment, style: 'width: 100%' %>
<% end %><br>

<script type="text/javascript" charset="utf-8">
    $('.review-rating').raty({
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        },
        path: '/assets/'
    });

    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });

    $('.average-review-rating').raty({
        readOnly: true,
        path: '/assets/',
        score: function() {
            return $(this).attr('data-score');
        }
    });
</script>