<div class="review-rating" data-score="<%= review.rating %>"></div>
<%= review.comment %>

<% if account_signed_in? && review.account_id == current_account.id %>
	<%= link_to 'Edit', edit_product_review_path(review.product, review) %>
	<%= link_to 'Delete', product_review_path(review.product_id, review), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

