<div class="card">
  <div class="card-body">
      <h4 class="card-title">Kategorier</h4>
      <h6 class="card-subtitle">Velg en kategori</h6>
      <!-- Nav tabs -->
      <div class="vtabs">
        <ul class="nav nav-tabs tabs-vertical" role="tablist">
          <% @categories.each do |cat| %>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#<%= cat.name %>" role="tab">
                <span class="hidden-sm-up">
                  <i class="ti-home"></i>
                </span>
                <span class="hidden-xs-down">
                  <%= cat.name %>
                </span>
              </a>
            </li>
          <% end %>
        </ul>

        <div class="tab-content">
          <% @categories.each do |cat| %>
            <div class="tab-pane" id="<%= cat.name %>" role="tabpanel">
              fff<% cat.sub_categories.each do |sub_cat| %>
                <%= sub_cat.name %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
<hr>



