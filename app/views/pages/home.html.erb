

<div class="row">
    <div class="col-md-3">
        <div style="overflow: auto;height: 450px;background: #fff;padding: 20px;">
            <% @categories.each do |cat| %>
                <div class="category" onclick="myFunction('cat<%= cat.id %>');">
                    <i class="fa fa-users" aria-hidden="true"></i> <%= cat.name %><br>
                </div>
                <div id="cat<%= cat.id %>" style="display: none;">
                    <% cat.sub_categories.each do |sub| %>
                        <div class="sub_category">
                            <%= sub.name %>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="col-md-9" style="background: #fff;">
        <div class="row">
            <div style="overflow: auto;height: 450px;background: #fff;">
                <% @categories.each do |cat| %>
                    <% cat.sub_categories.each do |sub_cat| %>
                        <div class="col-md-4 col-sm-4">
                            <div class="card">
                              <%= image_tag('/veileder.jpg', style: 'width: 100%;') %>
                              <div class="card-body">

                                <span class="info-box"><strong>Fornavn Etternavn</strong></span>
                                <div class="info-box-display">I'm a block element.</div>
                                <br>
                                <%= image_tag('/stars.png') %> <span class="text-muted" style="font-size: 12px;">(15)</span>
                              
                              </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>

<hr>

<hr>
  <h4 class="card-title">Kategorier</h4>
  <!-- Nav tabs -->
  <div class="vtabs">
    <ul class="nav nav-tabs tabs-vertical" role="tablist">
      <% @categories.each do |cat| %>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#<%= cat.name %>" role="tab">
            <span class="hidden-sm-up">
              <i class="ti-home"></i>
            </span>
            <span class="hidden-xs-down">
              <%= cat.name %>
            </span>
          </a>
        </li>
      <% end %>
    </ul>

    <div class="tab-content">
      <% @categories.each do |cat| %>
        <div class="tab-pane" id="<%= cat.name %>" role="tabpanel">
          fff<% cat.sub_categories.each do |sub_cat| %>
            <%= sub_cat.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>


<div class="row">
    <% @categories.each do |cat| %>
        <center>
            <%= link_to cat do %>
                <div class="col-md-3 col-sm-4 col-xs-6">
                    <div class="home_list">
                        <%= image_tag('/default.png') %><br>
                        <hr>
                        <strong><%= cat.name %></strong><br>
                    </div>
                </div>
            <% end %>
        </center>
    <% end %>
</div>

