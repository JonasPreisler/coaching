
<h1>Active Hours</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Tutor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_hours.each do |active_hour| %>
      <tr>
        <td><%= active_hour.from %></td>
        <td><%= active_hour.to %></td>
        <td><%= active_hour.tutor_id %></td>
        <td><%= link_to 'Show', active_hour %></td>
        <td><%= link_to 'Edit', edit_active_hour_path(active_hour) %></td>
        <td><%= link_to 'Destroy', active_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New active Hour', new_active_hour_path %>
