<div id="modal-window" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">BEDRIFT</h3>
      </div>
      <div class="modal-body" id="myWizard">

       <div class="progress">
         <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="2" style="width: 20%;">
           Trinn 1 af 3
         </div>
       </div>

       <div class="navbar">
          <div class="navbar-inner">
            <ul class="nav nav-pills">
               <li class="active" ><a href="#step1" data-toggle="tab" data-step="1" id="step-1">Trinn 1</a></li>
               <li><a href="#step2" id="step-2" data-toggle="tab" data-step="2">Trinn 2</a></li>
               <li><a href="#step3" id="step-3" data-toggle="tab" data-step="3">Trinn 3</a></li>
            </ul>
          </div>
       </div>
       <div class="tab-content">
          <div class="tab-pane fade in active" id="step1">

            <div class="well">
              <div class='form-group'>
                <label class='control-label' for='org-numbr' style='font-size: 30px'>Organisasjonsnummer</label>
                <input name="organization_number" class="form-control input-lg" id="org-numbr">
              </div>
            </div>
            <a class="btn btn-default next" id="step1next" >Fortsett</a>
          </div>
          <div class="tab-pane fade" id="step2">
            <div class="well radio-buttons" style="font-size: 24px;">
              <h2>Selskapsform</h2>
              <input type="radio" name="company_type" value="ENK" class="company_type_radio"> ENK<br>
              <input type="radio" name="company_type" value="ANS" class="company_type_radio" > ANS<br>
              <input type="radio" name="company_type" value="AS" class="company_type_radio" > AS<br>
              <input type="radio" name="company_type" value="PRIVAT" class="company_type_radio"> PRIVAT<br>
            </div>
            <a class="btn btn-default next" id="step2next">Fortsett</a>
          </div>
          <div class="tab-pane fade" id="step3">
            <div class="well">
              <h2>Fakturaadresse</h2>

                <label>Firmanavn</label>
                <input name="company_name" class="form-control input-lg" id="company-name">
                <label>Firmaadresse</label>
                <input name="company_address" class="form-control input-lg">
                <div class="row">
                  <div class="col-md-6 col-sm-6">
                  <label>Kontaktperson fornavn</label>
                    <input name="contact_person_first_name" class="form-control input-lg">
                  </div>
                  <div class="col-md-6 col-sm-6">
                  <label>Kontaktperson etternavn</label>
                    <input name="contact_person_last_name" class="form-control input-lg">
                  </div>
                </div><br>
               <%= submit_tag 'Registrer som rådgiver', class: 'submit-button' %>

            </div>
          </div>
       </div>
      </div>
     <!--  <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>
