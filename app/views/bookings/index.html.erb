<div id="bookings">
  <h2 id="month">
    <%= link_to "<i class='fa fa-arrow-left' aria-hidden='true'></i>".html_safe, date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to "<i class='fa fa-arrow-right' aria-hidden='true'></i>".html_safe, date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @bookings_by_date[date] %>
      <ul>
        <% @bookings_by_date[date].each do |booking| %>
          <li style="list-style: none;"><%#= link_to booking.account.name, booking %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>




<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Tutor</th>
      <th>Start</th>
      <th>End</th>
      <th>Offer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.account_id %></td>
        <td><%= booking.tutor_id %></td>
        <td><%= booking.start %></td>
        <td><%= booking.end %></td>
        <td><%= booking.offer_id %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
